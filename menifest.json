{
    "name": "ColorCapture",
    "description": "It is a Chrome extension that allows you to pick colors from any text on a webpage.",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/assets/icons8-color-picker-gradient-16.png",
        "32": "/assets/icons8-color-picker-gradient-32.png",
        "96": "/assets/icons8-color-picker-gradient-96.png"
    }
}